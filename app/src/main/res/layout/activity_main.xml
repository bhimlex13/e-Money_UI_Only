                        android:layout_height="wrap_content"
                        android:text="Send Money"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <!-- Repeat this LinearLayout for each icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/send_money_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Money"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <!-- Repeat this LinearLayout for each icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/send_money_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Money"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <!-- Repeat this LinearLayout for each icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/send_money_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Money"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <!-- Add other icons similarly -->
            </LinearLayout>

        </LinearLayout>

        <!-- Promotional Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="#A1D819"
                android:padding="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refer"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get ₱50 for every friend who registers with your code."
                    android:textColor="#000"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C1282D"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱100 Cashback"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:rotation="-90"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

